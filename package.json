{
  "name": "postcss-sass",
  "version": "0.2.0",
  "description": "A Sass parser for PostCSS, using gonzales-pe.",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "postcss-sass",
    "sass"
  ],
  "author": "Oleh Aloshkin <olegaleshkin@gmail.com>",
  "license": "MIT",
  "repository": "AleshaOleg/postcss-sass",
  "bugs": {
    "url": "https://github.com/AleshaOleg/postcss-sass/issues"
  },
  "homepage": "https://github.com/AleshaOleg/postcss-sass",
  "dependencies": {
    "gonzales-pe": "^4.0.3",
    "postcss": "^6.0.6"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.1.1",
    "eslint-config-postcss": "^2.0.2",
    "istanbul": "^0.4.5",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.1",
    "pre-commit": "^1.2.2"
  },
  "scripts": {
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "test": "jest --coverage && eslint *.js",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "eslintConfig": {
    "extends": "eslint-config-postcss/es5",
    "env": {
      "jest": true
    },
    "rules": {
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "complexity": "off",
      "max-len": [
        "error",
        120
      ]
    }
  },
  "pre-commit": [
    "test",
    "lint-staged"
  ],
  "main": "index.js"
}
