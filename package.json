{
  "name": "postcss-sass",
  "version": "0.2.0",
  "description": "A Sass parser for PostCSS, using gonzales-pe.",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "postcss-sass",
    "sass"
  ],
  "author": "Oleh Aloshkin <olegaleshkin@gmail.com>",
  "license": "MIT",
  "repository": "AleshaOleg/postcss-sass",
  "bugs": {
    "url": "https://github.com/AleshaOleg/postcss-sass/issues"
  },
  "homepage": "https://github.com/AleshaOleg/postcss-sass",
  "dependencies": {
    "gonzales-pe": "^4.2.3",
    "postcss": "^6.0.15"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-precompile-charcodes": "^1.1.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.14.0",
    "eslint-config-postcss": "^2.0.2",
    "istanbul": "^0.4.5",
    "jest": "^22.0.4",
    "lint-staged": "^6.0.0",
    "postcss-parser-tests": "^6.1.0",
    "pre-commit": "^1.2.2"
  },
  "scripts": {
    "prepack": "npm run build",
    "clean": "rm *.js || echo 'Already cleaned'",
    "build": "npm run clean && babel -s inline -d ./ *.es6",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "pretest": "eslint *.es6 __tests__",
    "test": "npm run build && jest --coverage",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "eslintConfig": {
    "extends": "eslint-config-postcss",
    "rules": {
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "complexity": "off",
      "max-len": [
        "error",
        120
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/**/*"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": "last 1 version",
            "node": 4
          },
          "loose": true
        }
      ]
    ],
    "plugins": [
      "add-module-exports",
      "precompile-charcodes"
    ]
  },
  "pre-commit": [
    "test",
    "lint-staged"
  ],
  "main": "index.js"
}
